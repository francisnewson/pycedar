spline_templates = pycedar.load_templates_csv( 'data/align_csv/kaonp_1710_1500_splines.csv.gz' ).loc[1500, :, :]

asym_aligner = pycedar.AsymAligner( wideset = wide_data, 
        spline_range = 1000, spline_smoothing = 80 )

asym_aligner.spline_step = 50
asym_aligner.set_templates( spline_templates )
asym_aligner.prepare_templates()


fig = plt.figure( figsize = [6, 6] )
fig.set_tight_layout(True)
ax = fig.add_subplot( 111 )

myrange = 1500

ax.grid( True )
asym_aligner.plot_xinvspline( ax )
ax.set_title( '{0} mm diaphragm'.format( 0.001 * 1500  ) )
plt.savefig( 'output/spline_shapes/d1500_stat_x.pdf', format = 'pdf' , transparent = 'true' )
ax.cla()
ax.grid( True )
ax.set_title( '{0} mm diaphragm'.format( 0.001 * 1500  ) )
asym_aligner.plot_yinvspline( ax )
plt.savefig( 'output/spline_shapes/d1500_stat_y.pdf', format = 'pdf' , transparent = 'true' )
