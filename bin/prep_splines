#!/usr/bin/env python
import pandas as pd
import os
import os.path as osp

folder = 'data/pencil_yscan/indi'
print( 'Reading from data/pencil_yscan')
files = ( osp.join( folder, name ) for name in  os.listdir( folder ) )

data_sets = []

for f in files:
    print ( f )
    dt = pd.read_csv( open( f ), delim_whitespace = True )
    data_sets.append( dt )

print( 'Juggling')
res = pd.concat( data_sets )
res.rename( columns = {'index':'y'}, inplace = True )
res['x'] = 0
res['r'] = 1000

cols = res.columns.tolist()
cols.insert(0, cols.pop(cols.index('y')))
cols.insert(0, cols.pop(cols.index('x')))
cols.insert(0, cols.pop(cols.index('r')))

res = res[cols].sort( 'y' )

print (res)

print( 'Writing to data/pencil_yscan/all.csv')
res.to_csv( 'data/pencil_yscan/all.csv', sep = ' ', index = False)
